<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    tools:context=".ChangePasswordActivity">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="start"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="12dp"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/alata"
        android:text="Create new password"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_button" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/textViewSubtitle"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="32dp"
        android:text="Your new password must be unique from those previously used."
        android:textColor="#7A7A7A"
        android:textSize="18sp"
        android:fontFamily="@font/alata"
        app:layout_constraintBottom_toTopOf="@+id/editTextNewPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle" />

    <!-- New Password Input -->
    <EditText
        android:id="@+id/editTextNewPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/input_text"
        android:hint="New Password"
        android:padding="16dp"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textColorHint="#B0B0B0"
        app:layout_constraintTop_toBottomOf="@id/textViewSubtitle"
        app:layout_constraintTop_margin="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_margin="32dp"
        app:layout_constraintEnd_margin="32dp" />

    <!-- Confirm Password Input -->
    <EditText
        android:id="@+id/editTextConfirmPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/input_text"
        android:hint="Confirm Password"
        android:padding="16dp"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textColorHint="#B0B0B0"
        app:layout_constraintTop_toBottomOf="@id/editTextNewPassword"
        app:layout_constraintTop_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_margin="32dp"
        app:layout_constraintEnd_margin="32dp" />

    <!-- Confirm Password Button -->
    <Button
        android:id="@+id/buttonConfirmPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/button_borderlogin"
        android:text="Confirm Password"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/editTextConfirmPassword"
        app:layout_constraintTop_margin="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_margin="32dp"
        app:layout_constraintEnd_margin="32dp" />

    <!-- Bottom Left Lock Image -->

    <!-- Bottom Right Lock Image -->

    <ImageView
        android:id="@+id/imageViewLockBottomLeft"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginStart="-120dp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/ic_lock_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageViewLockBottomRight"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginEnd="16dp"
        android:rotation="50"
        android:layout_marginBottom="89dp"
        android:src="@drawable/ic_lock_button_mirror"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
